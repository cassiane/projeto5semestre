<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/witc?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">USERWITCAPP</property>
    <property name="hibernate.current_session_context_class">managed</property>
    <property name="hibernate.connection.password">APPCTIWUSER</property>
    <property name="hibernate.show_sql">false</property>
    <property name="hibernate.format_sql">false</property>
    <mapping class="br.com.witc.modelo.Usuario"/>
    <mapping class="br.com.witc.modelo.RecuperarConta"/>
    <mapping class="br.com.witc.modelo.Perfil"/>
    <mapping class="br.com.witc.modelo.Livro"/>
    <mapping class="br.com.witc.modelo.TipoGenero"/>
    <mapping class="br.com.witc.modelo.TipoStatus"/>
    <mapping class="br.com.witc.modelo.TipoTexto"/>
    <mapping class="br.com.witc.modelo.HistoricoLivro"/>
    <mapping class="br.com.witc.modelo.ConvidadoUsuario"/>
    <mapping class="br.com.witc.modelo.TipoPerfil"/>
    <mapping class="br.com.witc.modelo.ConvidadoPerfil"/>
    <mapping class="br.com.witc.modelo.Desafios"/>
    <mapping class="br.com.witc.modelo.DesafiosPalavras"/>
    <mapping class="br.com.witc.modelo.Messenger"/>
  </session-factory>
</hibernate-configuration>
